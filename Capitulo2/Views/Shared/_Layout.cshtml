
@inject Microsoft.AspNetCore.Identity.SignInManager<Capitulo2.Models.Infra.UsuarioDoApp> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<Capitulo2.Models.Infra.UsuarioDoApp> UserManager

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instituições</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css">
    @RenderSection("styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-light navbar-light border-bottom box-shadow mb-3" >
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Instituições de Ensino</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Discente" asp-controller="Academico" asp-action="Index">Acadêmicos</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Cadastros" asp-controller="Instituicao" asp-action="Index">Instituições</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Cadastros" asp-controller="Departamento" asp-action="Index">Departamentos</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Docente" asp-controller="Professor" asp-action="AdicionarProfessor">Professores</a>
                        </li> *@
                        <li class="nav-item ms-auto">
                            @if(SignInManager.IsSignedIn(User)) {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Infra" asp-action="Sair">Logout</a>
                            } else {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Infra" asp-action="Acessar">Login</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Caio Moreira lima | Casa do Código
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script	src="~/lib/popper.js//umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("ScriptPage", false);
</body>
</html>
