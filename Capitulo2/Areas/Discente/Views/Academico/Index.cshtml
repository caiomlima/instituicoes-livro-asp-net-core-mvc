@model IEnumerable<Modelo.Discente.Academico>

@{
    ViewData["Title"] = "Acadêmicos";
}

@if(@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<p>
    <a asp-action="Create">Cadastrar novo Acadêmico</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AcademicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistroAcademico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistroAcademico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nascimento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AcademicoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.AcademicoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.AcademicoId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
