@model Modelo.Discente.Academico

@{
    ViewData["Title"] = "Alterar Acadêmico";
}

<h1>Alterar Acadêmico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AcademicoId" />
            <div class="form-group">
                <label asp-for="RegistroAcademico" class="control-label"></label>
                <input asp-for="RegistroAcademico" class="form-control" />
                <span asp-validation-for="RegistroAcademico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Foto</label>
                <input type="file" name="foto" class="form-control">
            </div>
            <div class="col-3">
                <img class="img-thumbnail" src="@Url.Action("GetFoto", "Academico", new {id = Model.AcademicoId})" style="display: block; margin-left: auto; margin-right: auto;">
            </div>
            <div class="checkbox">
				<label>
                    <input type="checkbox" name="checkRemoverFoto" value="Sim">
                    Remover Foto
				</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar à listagem</a>
</div>

@section ScriptPage	{
    @{await	Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

