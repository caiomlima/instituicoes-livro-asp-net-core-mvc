@model Modelo.Cadastros.Instituicao

@{
    ViewData["Title"] = "Detalhes da Instituição";
}

<h1>Detalhes da Instituição</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstituicaoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InstituicaoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
    <div class="col-12">
		@{await	Html.RenderPartialAsync("~/Areas/Cadastros/Views/Instituicao/_ComDepartamentos.cshtml",	Model.Departamentos.ToList());}
	</div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.InstituicaoId">Editar</a>
    <a asp-action="Index">Retornar à listagem</a>
</div>



