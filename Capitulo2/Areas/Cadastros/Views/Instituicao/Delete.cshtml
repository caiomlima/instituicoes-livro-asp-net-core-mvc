@model Modelo.Cadastros.Instituicao

@{
    ViewData["Title"] = "Apagar Instituição";
}

<h1>Apagar Instituição</h1>

<h3>Deseja mesmo apagar o registro da Instituição?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InstituicaoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InstituicaoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
    
    <br>
    <form asp-action="Delete">
        <input type="hidden" asp-for="InstituicaoId"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar à listagem</a>
    </form>
</div>



